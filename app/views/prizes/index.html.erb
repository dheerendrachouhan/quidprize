<div class="container_main1">
   <div class="table-responsive">
<h1>Listing prizes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Description</th>
      <th>Type</th>
      <th>Amount</th>
      <th>Winner</th>
      <th>Status</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @prizes.each do |prize| %>
      <tr>
        <td><%= prize.description %></td>
        <td><%= prize.type %></td>
        <td><%= prize.amount %></td>
        <td><%= prize.winner %></td>
        <td><%= prize.status %></td>
        <td><%= link_to 'Show', prize %></td>
        <td><%= link_to 'Edit', edit_prize_path(prize) %></td>
        <td><%= link_to 'Destroy', prize, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prize', new_prize_path %>
 </div>
</div>