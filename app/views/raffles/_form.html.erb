<div class="container_main1">

<div class="wrapper_1">


<%= form_for(@raffle, html:{class:'new_user'}) do |f| %>
  <% if @raffle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@raffle.errors.count, "error") %> prohibited this raffle from being saved:</h2>

      <ul>
      <% @raffle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   
   <span>Business : </span> 
  <span>  <%= f.collection_select :business_id, Business.order(:name),:id,:name, :prompt => '--Please Select--',:selected => @raffle.business_id, :class =>'form-control', :style => 'width:200px', :include_blank => true %>
  </span></div>
  <div class="field">
  	
    <%= 
     if @raffle.target_url.blank? ==false
     	@url = @raffle.target_url
     else 
     	@url = params[:targeturl] 
     end
    f.text_field :target_url, class: 'form-control',  placeholder:'Target URL', value: @url  %>
  </div>
  
  <div class="field">
   
    <%= f.text_field :end_date, class: 'form-control',  placeholder:'End Date', id:"datepicker" %>
  </div>
   <div class="field">
    <%= f.text_field :contact_name, class: 'form-control',  placeholder:'Contact Name' %>
  </div>
   <div class="field">
    <%= f.text_field :contact_no, class: 'form-control',  placeholder:'Contact Number'  %>
  </div>
 
 
  
  <div class="actions">
    <%= f.submit 'Submit', class:'btn btn-lg btn-primary btn-block btn1 btn4'   %>
  </div>
<% end %>
</div>
</div>
 <script type="text/javascript">
           $(function() {
           
           	    var dateval = $( "#datepicker" ).val();
				$( "#datepicker" ).datepicker();
				$( "#datepicker" ).datepicker( "option", "dateFormat",'dd-mm-yy' );
				$( "#datepicker" ).datepicker( "setDate", dateval);
				
				
				});
</script>
