<div class="container_main1">

<div class="wrapper_1 new_user" >
<p id="notice"><%= notice %></p>

<p>
  <strong>Business:</strong>
  <%= if @raffle.business_id.blank? == false 
	        	 Business.find(@raffle.business_id).name
	        	 end
   %>
</p>

<p>
  <strong>Target url:</strong>
  <%= @raffle.target_url %>
</p>
<p>
  <strong>Root Ticket:</strong>
  <%= 
  @ticket_url = @raffle.tickets.where(parent_ticket: 0).first
   
   if @ticket_url != nil
   	 @ticket_url.hash_str
   end
   %>
</p>

<p>
  <strong>End date:</strong>
  <%= @raffle.end_date.strftime("%d-%m-%Y") %>
</p>

<%= link_to 'Edit', edit_raffle_path(@raffle),style:"text-align:center;color:#fff;width:330px",  class:'btn btn-lg btn-primary btn-block btn1 btn4' %><br>
<%= link_to 'Back', raffles_path,style:"text-align:center;color:#fff;width:330px",  class:'btn btn-lg btn-primary btn-block btn1 btn4' %>
</div>
</div>
